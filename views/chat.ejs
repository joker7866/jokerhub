<%- include('partials/header') %>

    <!-- Custom Style for Chat Layout -->
    <style>
        /* Desktop Default: Side by Side */
        .chat-container {
            display: flex;
            height: 85vh;
            /* Fixed height for chat app feel */
            margin-top: 100px;
            overflow: hidden;
            position: relative;
        }

        .chat-sidebar {
            width: 320px;
            display: flex;
            flex-direction: column;
            border-right: 1px solid var(--glass-border);
            background: rgba(0, 0, 0, 0.2);
        }

        .chat-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: rgba(0, 0, 0, 0.05);
            position: relative;
        }

        .back-btn {
            display: none;
            /* Hidden on desktop */
        }

        /* Mobile Responsive Logic */
        @media (max-width: 768px) {
            .chat-container {
                height: calc(100vh - 80px);
                /* Full height minus header */
                margin-top: 70px;
                border-radius: 0;
                /* Full width on mobile */
            }

            .glass-card {
                border-radius: 0;
                border-left: none;
                border-right: none;
            }

            /* Toggle logic: We use a class 'chat-active' on the parent to switch views */
            .chat-layout.chat-active .chat-sidebar {
                display: none;
            }

            .chat-layout:not(.chat-active) .chat-main {
                display: none;
            }

            .chat-sidebar {
                width: 100%;
            }

            .chat-main {
                width: 100%;
            }

            .back-btn {
                display: inline-block;
                margin-right: 10px;
                color: var(--text-secondary);
                font-size: 1.2rem;
                cursor: pointer;
            }
        }

        /* Message Bubbles - Premium Look */
        .msg-bubble {
            padding: 10px 16px;
            border-radius: 18px;
            max-width: 75%;
            font-size: 0.95rem;
            line-height: 1.5;
            position: relative;
            animation: slideIn 0.2s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .msg-me {
            align-self: flex-end;
            background: linear-gradient(135deg, var(--neon-purple), #8a00ff);
            color: white;
            border-bottom-right-radius: 4px;
        }

        .msg-other {
            align-self: flex-start;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--glass-border);
            color: var(--text-primary);
            border-bottom-left-radius: 4px;
        }

        .msg-time {
            font-size: 0.65rem;
            margin-top: 4px;
            opacity: 0.7;
            text-align: right;
            display: block;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

    <div class="container" style="padding: 0; max-width: 1400px;">
        <!-- Main wrapper with class for toggling -->
        <div class="glass-card chat-container chat-layout" id="chat-layout">

            <!-- Sidebar -->
            <div class="chat-sidebar">
                <div style="padding: 1.5rem; border-bottom: 1px solid var(--glass-border);">
                    <div
                        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                        <h4 style="margin: 0; font-weight: 700;">Chats</h4>
                        <span id="connection-status"
                            style="font-size: 0.7rem; color: var(--text-secondary);">Connecting...</span>
                    </div>

                    <!-- Search -->
                    <div style="position: relative;">
                        <i class="fa-solid fa-search"
                            style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: var(--text-secondary); font-size: 0.9rem;"></i>
                        <input type="text" id="user-search" placeholder="Search team..."
                            style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); padding: 10px 10px 10px 35px; border-radius: 20px; color: white; outline: none; transition: 0.3s;">
                    </div>
                </div>

                <!-- User List -->
                <div id="user-list" style="flex: 1; overflow-y: auto;">
                    <!-- items injected via JS -->
                </div>

                <!-- User Profile Mini (Bottom Sidebar) -->
                <div
                    style="padding: 1rem; border-top: 1px solid var(--glass-border); background: rgba(0,0,0,0.2); display: flex; align-items: center; gap: 10px;">
                    <div
                        style="width: 35px; height: 35px; border-radius: 50%; background: var(--neon-blue); display: flex; align-items: center; justify-content: center; font-weight: bold; color: black;">
                        <%= user ? user.name.charAt(0).toUpperCase() : '?' %>
                    </div>
                    <div style="flex: 1; overflow: hidden;">
                        <div
                            style="font-size: 0.9rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            <%= user ? user.name : 'Vistor' %>
                        </div>
                        <div style="font-size: 0.7rem; color: #00ff88;">● Online</div>
                    </div>
                </div>
            </div>

            <!-- Chat Main -->
            <div class="chat-main">
                <!-- Header -->
                <div
                    style="padding: 1rem; border-bottom: 1px solid var(--glass-border); background: rgba(0,0,0,0.2); display: flex; align-items: center; justify-content: space-between; backdrop-filter: blur(10px);">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <i class="fa-solid fa-arrow-left back-btn" onclick="closeChat()"></i>
                        <div id="chat-avatar-placeholder"
                            style="width: 40px; height: 40px; border-radius: 50%; background: rgba(255,255,255,0.1); display: flex; align-items: center; justify-content: center; display: none;">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div>
                            <h4 id="chat-title" style="margin: 0; font-size: 1.1rem;">Select a Chat</h4>
                            <span id="chat-subtitle" style="font-size: 0.8rem; color: var(--text-secondary);"></span>
                        </div>
                    </div>
                    <div>
                        <!-- Actions -->
                        <i class="fa-solid fa-phone"
                            style="padding: 10px; color: var(--text-secondary); cursor: pointer;"></i>
                        <i class="fa-solid fa-video"
                            style="padding: 10px; color: var(--text-secondary); cursor: pointer;"></i>
                        <i class="fa-solid fa-circle-info"
                            style="padding: 10px; color: var(--text-secondary); cursor: pointer;"></i>
                    </div>
                </div>

                <!-- Messages -->
                <div id="message-area"
                    style="flex: 1; padding: 1.5rem; overflow-y: auto; display: flex; flex-direction: column; gap: 8px;">
                    <div
                        style="text-align: center; color: var(--text-secondary); margin-top: auto; margin-bottom: auto;">
                        <i class="fa-regular fa-paper-plane"
                            style="font-size: 4rem; opacity: 0.1; margin-bottom: 1rem;"></i>
                        <p>Secure connection ready.</p>
                    </div>
                </div>

                <!-- Input -->
                <div id="input-container"
                    style="padding: 1rem; background: rgba(0,0,0,0.2); display: none; gap: 10px; align-items: center;">
                    <i class="fa-solid fa-paperclip"
                        style="color: var(--text-secondary); font-size: 1.2rem; cursor: pointer;"></i>
                    <input type="text" id="msg-input" placeholder="Message..."
                        style="flex: 1; background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); padding: 12px; border-radius: 25px; color: white; outline: none;">
                    <button class="btn btn-primary" onclick="sendMessage()"
                        style="padding: 10px 15px; border-radius: 50%;">
                        <i class="fa-solid fa-paper-plane"></i>
                    </button>
                </div>
            </div>

        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const myId = "<%= user ? user.id : '' %>";

        // State
        let activeChatUserId = null;
        let users = [];
        const chats = {};

        // DOM
        const layoutEl = document.getElementById('chat-layout');
        const userListEl = document.getElementById('user-list');
        const messageArea = document.getElementById('message-area');
        const chatTitle = document.getElementById('chat-title');
        const chatSubtitle = document.getElementById('chat-subtitle');
        const chatAvatar = document.getElementById('chat-avatar-placeholder');
        const inputContainer = document.getElementById('input-container');
        const msgInput = document.getElementById('msg-input');
        const statusEl = document.getElementById('connection-status');

        // --- Socket Events ---
        socket.on('connect', () => {
            statusEl.innerHTML = '<span style="color:#00ff88">● Connected</span>';
        });

        socket.on('disconnect', () => {
            statusEl.innerHTML = '<span style="color:#ff4444">● Offline</span>';
        });

        socket.on('userList', (onlineUsers) => {
            users = onlineUsers.filter(u => u.id !== myId);
            renderUserList();
        });

        socket.on('privateMessage', (msg) => {
            const otherId = msg.fromId === myId ? msg.toId : msg.fromId;
            if (!chats[otherId]) chats[otherId] = [];
            chats[otherId].push(msg);

            if (activeChatUserId === otherId) {
                appendMessage(msg);
            } else {
                // Re-render list to show unread dot/count
                renderUserList(otherId);
            }
        });

        // --- Interaction ---
        function renderUserList(highlightId = null) {
            userListEl.innerHTML = '';
            const searchVal = document.getElementById('user-search').value.toLowerCase();
            const filtered = users.filter(u => u.name.toLowerCase().includes(searchVal));

            if (filtered.length === 0) {
                userListEl.innerHTML = `<div style="padding:2rem; text-align:center; color:var(--text-secondary); opacity:0.6">No users found</div>`;
                return;
            }

            filtered.forEach(u => {
                const isActive = activeChatUserId === u.id;
                const hasUnread = highlightId === u.id;

                const div = document.createElement('div');
                // List Item Style
                div.style.cssText = `
                padding: 12px 20px;
                display: flex;
                align-items: center;
                gap: 15px;
                cursor: pointer;
                transition: 0.2s;
                border-left: 3px solid transparent;
                background: ${isActive ? 'rgba(255,255,255,0.05)' : 'transparent'};
                border-left-color: ${isActive ? 'var(--neon-purple)' : 'transparent'};
            `;

                // Avatar
                const initial = u.name.charAt(0).toUpperCase();
                const color = hasUnread ? 'var(--neon-purple)' : 'var(--glass-border)';

                div.innerHTML = `
                <div style="position: relative;">
                    <div style="width: 45px; height: 45px; border-radius: 50%; background: linear-gradient(135deg, #333, #111); border: 1px solid ${color}; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 1.1rem; color: white;">
                        ${initial}
                    </div>
                     <div style="position: absolute; bottom: 0; right: 0; width: 12px; height: 12px; background: #00ff88; border-radius: 50%; border: 2px solid #000;"></div>
                </div>
                <div style="flex: 1;">
                    <div style="font-weight: 600; color: ${hasUnread ? 'white' : 'var(--text-primary)'};">${u.name}</div>
                    <div style="font-size: 0.8rem; color: var(--text-secondary);">${hasUnread ? 'New message' : 'Online'}</div>
                </div>
            `;

                div.onclick = () => openChat(u);
                userListEl.appendChild(div);
            });
        }

        function openChat(user) {
            activeChatUserId = user.id;

            // UI Update
            chatTitle.innerText = user.name;
            chatSubtitle.innerText = 'Active now';
            chatAvatar.style.display = 'flex';
            chatAvatar.innerHTML = user.name.charAt(0).toUpperCase();
            chatAvatar.style.background = 'linear-gradient(135deg, var(--neon-purple), #8a00ff)';

            inputContainer.style.display = 'flex';

            // Mobile Toggle
            layoutEl.classList.add('chat-active');

            // Load Messages
            renderMessages(user.id);
            renderUserList(); // Clear unread highlights if any
        }

        function closeChat() {
            activeChatUserId = null;
            layoutEl.classList.remove('chat-active');
        }

        function renderMessages(userId) {
            messageArea.innerHTML = '';
            const history = chats[userId] || [];

            // Date separator logic could go here

            history.forEach(appendMessage);
            scrollToBottom();
        }

        function appendMessage(msg) {
            // Clear empty state
            if (messageArea.innerText.includes('Secure connection ready')) messageArea.innerHTML = '';

            const isMe = msg.fromId === myId;
            const div = document.createElement('div');
            div.className = `msg-bubble ${isMe ? 'msg-me' : 'msg-other'}`;
            div.innerHTML = `
            ${msg.text}
            <span class="msg-time">${msg.time}</span>
        `;
            messageArea.appendChild(div);
            scrollToBottom();
        }

        function scrollToBottom() {
            messageArea.scrollTop = messageArea.scrollHeight;
        }

        function sendMessage() {
            const text = msgInput.value.trim();
            if (!text || !activeChatUserId) return;

            socket.emit('privateMessage', { targetUserId: activeChatUserId, text });
            msgInput.value = '';
            msgInput.focus();
        }

        // Enter to send
        msgInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });

        // Search listener
        document.getElementById('user-search').addEventListener('input', () => renderUserList());

    </script>

    <%- include('partials/footer') %>